---
- name: Update, Upgrade, Install Packages, and Start QEMU Agent
  hosts: all
  remote_user: root

  tasks:
    # Task to update the APT package cache
    - name: Update apt cache
      apt:
        update_cache: yes

    # Task to upgrade all packages safely
    - name: Upgrade all packages
      apt:
        upgrade: safe
        autoremove: yes
        force_apt_get: yes

    # Task to install required packages
    - name: Install required packages
      apt:
        name:
          - git
          - wget
          - curl
          - unzip
          - htop
          - python3
          - python3-pip
          - nfs-common
          - prometheus-node-exporter
          - rkhunter
          - clamav-daemon
          - clamav
          - qemu-guest-agent
        state: present
        update_cache: yes
        autoremove: yes
        force_apt_get: yes
      # Notify the following task to start and enable services
      notify:
        - Start and enable services

    # Task to start and enable services
    - name: Start and enable services
      systemd:
        name: "{{ item }}"
        state: started
        enabled: yes
      loop:
        - clamav-daemon
        - prometheus-node-exporter
      # Listen for notification from the previous task
      listen: "Start and enable services"

    # Task to reboot the system
    - name: Reboot the system
      reboot:
        msg: "Rebooting the system..."
      # Listen for notification from the previous task
      listen: "Start and enable services"

- name: Ensure SSH known_hosts files exist
  hosts: all
  remote_user: root

  tasks:
    # Task to ensure /home/ansible/.ssh directory exists with appropriate permissions
    - name: Ensure /home/ansible/.ssh directory exists
      ansible.builtin.file:
        path: /home/ansible/.ssh
        state: directory
        mode: '0700'
      tags:
        - ssh_known_hosts

    # Task to ensure /root/.ssh directory exists with appropriate permissions
    - name: Ensure /root/.ssh directory exists
      ansible.builtin.file:
        path: /root/.ssh
        state: directory
        mode: '0700'
      tags:
        - ssh_known_hosts

    # Task to ensure /home/ansible/.ssh/known_hosts file exists with appropriate permissions
    - name: Ensure /home/ansible/.ssh/known_hosts file exists
      ansible.builtin.file:
        path: /home/ansible/.ssh/known_hosts
        state: touch
        mode: '0600'
      tags:
        - ssh_known_hosts

    # Task to ensure /root/.ssh/known_hosts file exists with appropriate permissions
    - name: Ensure /root/.ssh/known_hosts file exists
      ansible.builtin.file:
        path: /root/.ssh/known_hosts
        state: touch
        mode: '0600'
      tags:
        - ssh_known_hosts

    # Task to ensure /etc/ssh directory exists with appropriate permissions
    - name: Ensure /etc/ssh directory exists
      ansible.builtin.file:
        path: /etc/ssh
        state: directory
        mode: '0755'
      tags:
        - ssh_known_hosts

    # Task to ensure /etc/ssh/ssh_known_hosts file exists with appropriate permissions
    - name: Ensure /etc/ssh/ssh_known_hosts file exists
      ansible.builtin.file:
        path: /etc/ssh/ssh_known_hosts
        state: touch
        mode: '0644'
      tags:
        - ssh_known_hosts
