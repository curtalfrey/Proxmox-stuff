---
- name: Update, Upgrade, Install Packages, and Start QEMU Agent
  hosts: all
  remote_user: root

  tasks:
    - name: Update apt cache
      apt:
        update_cache: yes

    - name: Upgrade all packages
      apt:
        upgrade: safe
        autoremove: yes
        force_apt_get: yes

    - name: Install required packages
      apt:
        name:
          - git
          - wget
          - curl
          - unzip
          - htop
          - python3
          - python3-pip
          - nfs-common
          - prometheus-node-exporter
          - rkhunter
          - clamav-daemon
          - clamav
          - qemu-guest-agent
        state: present
        update_cache: yes
        autoremove: yes
        force_apt_get: yes
      notify:
        - Start and enable services

    - name: Start and enable services
      systemd:
        name: "{{ item }}"
        state: started
        enabled: yes
      loop:
        - clamav-daemon
        - prometheus-node-exporter
      listen: "Start and enable services"

    - name: Reboot the system
      reboot:
        msg: "Rebooting the system..."
      listen: "Start and enable services"

- name: Ensure SSH known_hosts files exist
  hosts: all  # Target all hosts
  remote_user: root  # Set the remote user to root

  tasks:
    - name: Ensure /home/ansible/.ssh directory exists
      ansible.builtin.file:
        path: /home/ansible/.ssh
        state: directory
        mode: '0700'  # Set permissions as needed
      tags:
        - ssh_known_hosts

    - name: Ensure /root/.ssh directory exists
      ansible.builtin.file:
        path: /root/.ssh
        state: directory
        mode: '0700'  # Set permissions as needed
      tags:
        - ssh_known_hosts

    - name: Ensure /home/ansible/.ssh/known_hosts file exists
      ansible.builtin.file:
        path: /home/ansible/.ssh/known_hosts
        state: touch
        mode: '0600'  # Set permissions as needed
      tags:
        - ssh_known_hosts

    - name: Ensure /root/.ssh/known_hosts file exists
      ansible.builtin.file:
        path: /root/.ssh/known_hosts
        state: touch
        mode: '0600'  # Set permissions as needed
      tags:
        - ssh_known_hosts

    - name: Ensure /etc/ssh directory exists
      ansible.builtin.file:
        path: /etc/ssh
        state: directory
        mode: '0755'  # Set permissions as needed
      tags:
        - ssh_known_hosts

    - name: Ensure /etc/ssh/ssh_known_hosts file exists
      ansible.builtin.file:
        path: /etc/ssh/ssh_known_hosts
        state: touch
        mode: '0644'  # Set permissions as needed
      tags:
        - ssh_known_hosts
